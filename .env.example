# ==============================================
# AMAZON AUDIT SAAS - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in the values

# Django Settings
# ----------------
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database PostgreSQL
# -------------------
DATABASE_URL=postgres://user:password@localhost:5432/amazon_audit_db
DB_NAME=amazon_audit_db
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Redis (Celery Broker)
# ---------------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Amazon SP-API Credentials
# -------------------------
# Get these from Amazon Seller Central Developer Portal
AMAZON_SP_API_REFRESH_TOKEN=your_refresh_token
AMAZON_SP_API_LWA_APP_ID=amzn1.application-oa2-client.xxxxx
AMAZON_SP_API_LWA_CLIENT_SECRET=your_lwa_client_secret
AMAZON_SP_API_AWS_ACCESS_KEY=AKIAXXXXXXXXXXXXXX
AMAZON_SP_API_AWS_SECRET_KEY=your_aws_secret_key
AMAZON_SP_API_ROLE_ARN=arn:aws:iam::123456789012:role/your-role

# Stripe Payments
# ---------------
STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# Email Configuration (Mailgun)
# -----------------------------
MAILGUN_API_KEY=key-xxxxxxxxxxxx
MAILGUN_SENDER_DOMAIN=mg.yourdomain.com
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Sentry Monitoring (Production)
# ------------------------------
SENTRY_DSN=https://xxxxxxxxxxxx@sentry.io/xxxxxxxxxxxx

# Application Settings
# --------------------
# Number of days to wait before considering a loss (Amazon 45-day rule)
LOSS_DETECTION_DELAY_DAYS=45

# Maximum number of months of history to fetch
MAX_HISTORY_MONTHS=18

# Price per case file download (in cents)
CASE_FILE_PRICE_CENTS=500
